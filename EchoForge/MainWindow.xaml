<Window x:Class="EchoForge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EchoForge" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Background="#1e1e1e"
        WindowStyle="SingleBorderWindow">

    <Grid>

        <!-- Define Grid: Left menu, main content -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <!-- Left Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <!-- Top Ribbon + Hamburger Row -->
            <RowDefinition Height="*"/>
            <!-- Main Content Area -->
            <RowDefinition Height="60"/>
            <!-- Bottom Banner -->
        </Grid.RowDefinitions>

        <!-- 🔴 LEFT SIDEBAR -->
        <Border Grid.Row="1" Grid.Column="0" Background="#222">
            <StackPanel VerticalAlignment="Top" Margin="0,10" HorizontalAlignment="Center">
                <Button Margin="4" Click="Input_Click" Background="Transparent" BorderThickness="0" Padding="0">
                    <Image Source="Resources/Input.png" Width="50" Stretch="Uniform"/>
                </Button>
                <Button Margin="4" Click="Parsed_Click" Background="Transparent" BorderThickness="0" Padding="0">
                    <Image Source="Resources/Parsed.png" Width="50" Stretch="Uniform"/>
                </Button>
                <Button Margin="4" Click="Generate_Click" Background="Transparent" BorderThickness="0" Padding="0">
                    <Image Source="Resources/Generate.png" Width="50" Stretch="Uniform"/>
                </Button>
                <Button Margin="4" Click="Audio_Click" Background="Transparent" BorderThickness="0" Padding="0">
                    <Image Source="Resources/Audio.png" Width="50" Stretch="Uniform"/>
                </Button>
                <Button Margin="4" Click="Voice_Click" Background="Transparent" BorderThickness="0" Padding="0">
                    <Image Source="Resources/Voice.png" Width="50" Stretch="Uniform"/>
                </Button>
            </StackPanel>
        </Border>

        <!-- ⬛ RIBBON ROW - INCLUDES HAMBURGER + CONTEXTUAL RIBBON -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <!-- Hamburger -->
                <ColumnDefinition Width="*"/>
                <!-- Ribbon Area -->
            </Grid.ColumnDefinitions>

            <!-- 🟩 HAMBURGER ICON -->
            <Border Grid.Column="0" Background="#2b2b2b">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <TextBlock Text="≡" FontSize="24" Margin="10,0" Foreground="LightGreen"/>
                </StackPanel>
            </Border>

            <!-- CONTEXTUAL RIBBON BAR -->
            <ContentControl x:Name="MainRibbon" Grid.Column="1" Margin="0,0,5,0" />
        </Grid>

        <!-- ⚪ MAIN CONTENT AREA -->
        <Border Grid.Row="1" Grid.Column="1" Background="#1c1c1c" CornerRadius="6" Margin="0,5,5,5">
            <ContentControl x:Name="MainContentControl"/>
        </Border>


        <!-- 🟢 BOTTOM INFO BAR -->
        <Border Grid.Row="2" Grid.ColumnSpan="2" Background="#2e2e2e" BorderBrush="DarkGreen" BorderThickness="1">
            <TextBlock Text="Ad/Info Area" Foreground="LightGreen" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>

    </Grid>
</Window>
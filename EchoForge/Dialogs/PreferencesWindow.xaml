<Window x:Class="EchoForge.Dialogs.PreferencesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Preferences" Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1e1e1e"
        Foreground="White">
    <TabControl Background="#2b2b2b" Foreground="White" BorderThickness="0">
        <TabItem Header="General">
            <StackPanel Margin="10">
                <CheckBox x:Name="TransitionsCheckBox"
                           Content="Enable transitions between views"
                           Foreground="White"
                           IsChecked="True"
                           Checked="TransitionsCheckBox_Changed"
                           Unchecked="TransitionsCheckBox_Changed"/>
            </StackPanel>
        </TabItem>
        <TabItem Header="API">
            <StackPanel Margin="10">
                <Label Content="Elevenlabs API Key" Foreground="White"/>
                <TextBox x:Name="ApiKeyTextBox"/>
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>
